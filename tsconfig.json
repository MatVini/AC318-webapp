{
	"compilerOptions": {
		"target": "es2016",
        "module": "es6",
        "outDir": "build",
		"strict": true,
		"noImplicitAny": false,
		"noEmit": true,
		"allowJs": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": "./src",
		"paths": {
		  "~/*": ["./*"]
		},
		"typeRoots": [
			"node_module/phaser/types"
		],
		"types": [
			"phaser",
			"node"
		]
	},
	"include": [
		"src/**/*"
	]
}